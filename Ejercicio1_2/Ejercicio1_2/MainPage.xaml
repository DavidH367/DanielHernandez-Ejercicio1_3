<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="LightBlue" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 1.3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nombres" FontSize="16" Padding="10,10,30,10"/>
        <Entry x:Name="txtNombre" Placeholder="Nombres"/>
        <Label Text="Apellidos" FontSize="16" Padding="10,0,30,0"/>
        <Entry x:Name="txtApellidos" Placeholder="Apellidos"/>
        <Label Text="Edad:" FontSize="16" Padding="10,10,30,10"/>
        <Entry x:Name="txtEdad" Keyboard="Numeric" Placeholder="Edad"/>
        <Label Text="Email:" FontSize="16" Padding="10,10,30,10"/>
        <Entry x:Name="txtEmail" Keyboard="Email" Placeholder="Email"/>

        <Label Text="Direccion:" FontSize="16" Padding="10,10,30,10"/>
        <Entry x:Name="txtDireccion" Placeholder="Direccion"/>

        <Button Text="Enviar" x:Name="btnEnviar" Clicked="btnEnviar_Clicked" Margin="10,10,10,10"/>
    </StackLayout>

</ContentPage>
